extends ../layout/lo-default.pug
block content
	table.table.text-center.table-hover
		thead.thead-dark
			tr
				th 번호
				th 제목
				th 저자
				th 발행일
				th 내용
				th 관리
			tbody
			each v in lists
				tr
					td= v.id
					td.text-left
						a(href=`/book/view/${v.id}`)= v.title
					td= v.writer
					td= v.wdate
					td.text-left
						a(href=`/book/view/${v.id}`)= v.content
						if v.icon 
							span.icon= v.icon
					td
						if user && v.uid == user.id
							a(href=`javascript: onUpdate(${v.id});`) 
								i.fa.fa-edit
							a.pl-2(href=`javascript: onDelete(${v.id});`)
								i.fa.fa-trash-alt
	include ../include/inc-pager.pug