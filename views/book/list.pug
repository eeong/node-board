extends ../layout/lo-default.pug
block content
	table.table.text-center.table-hover
		thead.thead-dark
			tr
				th 번호
				th 제목
				th 저자
				th 발행일
				th 내용
				th 관리
			tbody
			each v in lists
				tr
					td= v.id
					td.text-left= v.title
					td= v.writer
					td= v.wdate
					td.text-left= v.content
					td
						a(href=`javascript: onUpdate(${v.id});`) 
							i.fa.fa-edit
						a.pl-2(href=`javascript: onDelete(${v.id});`)
							i.fa.fa-trash-alt